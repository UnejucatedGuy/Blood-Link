<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sign_up"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".RequestBloodActivity">


<!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the following details :"
        android:layout_marginHorizontal="30dp"
        android:textColor="#F44336"

        android:textSize="25sp"
        android:textStyle="bold" />
-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        app:cardBackgroundColor="#F3EED9"

        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            >
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLOOD REQUEST"

        android:textColor="#F44336"

        android:textSize="20sp"
        android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        app:cardBackgroundColor="#F3EED9"

        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Information :"
                android:textColor="#F44336"
                android:textSize="20sp"
                android:textStyle="bold" />-->

            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_baseline_account_circle_24"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <!--Email Entry Field-->
            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawablePadding="8dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_baseline_location_24"
                android:drawablePadding="8dp"
                android:hint="Location"
                android:inputType="textAutoComplete"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
         </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"

        app:cardBackgroundColor="#F3EED9"

        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">


<!--            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Detail :"

                android:textColor="#F44336"

                android:textSize="20sp"
                android:textStyle="bold" />-->
            <EditText
                android:id="@+id/edtBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/ic_baseline_bloodtype_24"
                android:drawablePadding="8dp"
                android:hint="Blood Type"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtUrgency"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/ic_baseline_alarm_24"
                android:drawablePadding="8dp"
                android:hint="Blood Type"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtNote"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_baseline_edit_note_24"
                android:drawablePadding="8dp"
                android:hint="Note (optional)"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"/>
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Request Blood"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>








</LinearLayout>